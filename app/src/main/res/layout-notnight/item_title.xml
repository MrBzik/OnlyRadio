<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/radioItemRootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"

    >

    <ImageView
        android:id="@+id/ivItemImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginVertical="14dp"
        android:alpha="1"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/tvPlaceholder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginVertical="14dp"
        android:fontFamily="@font/ranchers"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="40sp" />



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="8dp"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:id="@+id/tvPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="Title name"
            android:textColor="@color/default_text_color"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center|start"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tvSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/aldrich"
            android:textColor="@color/default_secondary_text_color"
            android:maxLines="1"
            android:text="some radio station name"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textAlignment="viewEnd"
            android:fontFamily="@font/aldrich"
            android:textColor="@color/default_secondary_text_color"
            android:maxLines="1"
            android:text="22:04:15"
            android:textSize="14sp"
            />

    </LinearLayout>

    <View
        android:id="@+id/viewBottomSeparator"
        android:layout_width="match_parent"
        android:background="@color/station_bottom_separator_default"
        android:layout_height="2dp"
        android:layout_gravity="bottom"
        />


</FrameLayout>