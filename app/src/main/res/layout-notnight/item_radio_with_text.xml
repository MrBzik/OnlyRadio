<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/radioItemRootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/main_background"
    android:paddingStart="8dp"
    >

    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/ivItemImage"
        android:layout_width="65dp"
        android:layout_height="65dp"
        />

    <TextView
        android:id="@+id/tvPlaceholder"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:fontFamily="@font/ranchers"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="D"
        android:textColor="@color/main_background"
        android:textSize="40sp" />



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="73dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:id="@+id/tvPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="@color/default_text_color"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center|start"
            android:maxLines="2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:fontFamily="@font/aldrich"
            android:textColor="@color/default_secondary_text_color"
            android:maxLines="1"
            android:textSize="14sp"
            />



    </LinearLayout>


    <View
        android:id="@+id/viewBottomSeparator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="bottom"
        android:background="@color/station_bottom_separator_default"
        />

</FrameLayout>