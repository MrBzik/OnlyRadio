<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="?android:attr/selectableItemBackground"
    >
    <TextView
        android:id="@+id/tvTagText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAppearance="@style/dialogItemText"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:layout_marginEnd="65dp"/>

    <TextView
        android:id="@+id/tvStationsCount"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_gravity="end"
        android:textAppearance="@style/hintText"/>

    <View
        android:id="@+id/viewBottomSeparator"
        android:layout_width="match_parent"
        android:background="@color/option_bottom_separator"
        android:layout_height="2dp"
        android:layout_gravity="bottom"
        />



</FrameLayout>