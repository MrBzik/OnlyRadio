<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/radioSearchFragment">

    <fragment
        android:id="@+id/radioSearchFragment"
        android:name="com.example.radioplayer.ui.fragments.RadioSearchFragment"
        android:label="RadioSearchFragment" />
    <fragment
        android:id="@+id/favStationsFragment"
        android:name="com.example.radioplayer.ui.fragments.FavStationsFragment"
        android:label="FavStationsFragment" />
    <fragment
        android:id="@+id/stationDetailsFragment"
        android:name="com.example.radioplayer.ui.fragments.StationDetailsFragment"
        android:label="StationDetailsFragment" />
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.radioplayer.ui.fragments.HistoryFragment"
        android:label="HistoryFragment" />

    <action
        android:id="@+id/expandToStationDetails"
        app:destination="@+id/stationDetailsFragment"
        />


    <action
        android:id="@+id/action_navigate_to_search_frag"
        app:destination="@+id/radioSearchFragment"/>
    <action
        android:id="@+id/action_navigate_to_fav_frag"
        app:destination="@+id/favStationsFragment"/>
    <action
        android:id="@+id/action_navigate_to_history_frag"
        app:destination="@+id/historyFragment"/>


</navigation>