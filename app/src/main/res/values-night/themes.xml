    <style name="splashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>


    <style name="listPopupWindow" parent="Widget.AppCompat.Spinner">
        <item name="android:popupAnimationStyle">@null</item>
        <item name="android:popupEnterTransition">@null</item>
    </style>


</resources>