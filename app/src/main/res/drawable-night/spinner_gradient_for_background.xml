<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <inset android:insetBottom="50dp" android:insetTop="50dp">
            <shape android:shape="rectangle">
                <gradient
                    android:centerColor="@color/Separator"
                    android:startColor="@color/black"
                    android:endColor="@color/Separator"
                    android:angle="180"
                    />
            </shape>
        </inset>
    </item>
    <item  android:bottom="2dp" android:start="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:centerColor="@color/transparent"
                android:startColor="#14AA4D06"
                android:endColor="@color/black"
                android:angle="90"/>
        </shape>
    </item>

</layer-list>
