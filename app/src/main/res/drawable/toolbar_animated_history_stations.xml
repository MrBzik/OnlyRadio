<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="360dp"
            android:height="208dp"
            android:viewportWidth="360"
            android:viewportHeight="208">
            <group android:name="group">
                <path
                    android:name="right"
                    android:pathData="M 0 0 L 360 0 L 360 208 L 0 208 Z"
                    android:fillColor="#FFFFFF"/>
                <path
                    android:name="left"
                    android:pathData="M 0 0 L 170 0 L 185 208 L 0 208 Z"
                    android:fillColor="#4F7489"/>
            </group>
        </vector>
    </aapt:attr>
    <target android:name="left"
        android:animation="@animator/left_to_right">
    </target>

</animated-vector>
