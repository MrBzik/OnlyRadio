<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainTextButtons" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/aldrich</item>
    </style>



    <style name="mainTextTitle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/color_main_text_title</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/aldrich</item>
    </style>


    <style name="hintText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/default_secondary_text_color</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/aldrich</item>
    </style>

<!--    Bottom navigation-->

    <style name="bottomNavTextActive" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>

        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">4.6</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="bottomNavTextInactive" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">4.6</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:textStyle">bold</item>

    </style>



    <style name="dialogTextButtons" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/interactive_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name ="android:letterSpacing">0.1</item>
        <item name ="android:textStyle">bold</item>
    </style>

    <style name="dialogTitleText" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name ="android:textStyle">bold</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:fontFamily">serif-monospace</item>
    </style>

    <style name="dialogWarningTitleText" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name ="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_warning_text</item>
        <item name="android:fontFamily">serif-monospace</item>
    </style>

    <style name="dialogCurrentValue" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/regular_text_color</item>
       <item name="android:fontFamily">@font/aldrich</item>
    </style>

    <style name="dialogItemText" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/unselected_genre_color</item>
        <item name="android:fontFamily">@font/aldrich</item>
    </style>

    <style name="dialogSearchText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/aldrich</item>
        <item name="android:inputType">text|textNoSuggestions</item>
    </style>


    <style name="detailsTextExtras" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/regular_text_color</item>
        <item name="android:fontFamily">@font/aldrich</item>
    </style>



    <style name="prefixText" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/regular_text_color</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>



