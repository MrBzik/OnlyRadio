<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/radioItemRootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingStart="8dp"
    >


    <com.google.android.material.card.MaterialCardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginVertical="14dp"
        app:cardCornerRadius="@dimen/item_cardview_corners"
        >
        <ImageView
            android:id="@+id/ivItemImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0.7"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tvPlaceholder"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:fontFamily="@font/ranchers"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="40sp" />

    </com.google.android.material.card.MaterialCardView>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="8dp"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:id="@+id/tvPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="Title name"
            android:textColor="@color/default_text_color"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center|start"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tvSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/aldrich"
            android:textColor="@color/default_secondary_text_color"
            android:maxLines="1"
            android:text="some radio station name"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textAlignment="viewEnd"
            android:fontFamily="@font/aldrich"
            android:textColor="@color/default_secondary_text_color"
            android:maxLines="1"
            android:text="Bookmark"
            android:textSize="14sp"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/tvBookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/mainTextButtons"
        android:text="Bookmark"
        android:textSize="14sp"
        android:layout_marginStart="58dp"
        android:layout_marginBottom="6dp"
        app:drawableEndCompat="@drawable/ic_bookmark_hollow"
        android:layout_gravity="bottom"
        android:background="?android:attr/selectableItemBackground"
        />

</FrameLayout>