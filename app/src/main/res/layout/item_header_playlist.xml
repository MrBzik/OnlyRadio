<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flRoot"
    android:layout_width="100dp"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:background="?android:attr/selectableItemBackground"
        >


        <ImageView
            android:id="@+id/ivPlaylistCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleType="centerCrop"
            android:src="@drawable/lazy_playlist_cover_cat"
            android:background="?android:attr/selectableItemBackground"
            android:layout_gravity="center"
            />

        <!--        <View-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="40dp"-->
        <!--            android:background="@drawable/dark_gradient"-->
        <!--            android:layout_marginTop="50dp"/>-->

        <com.onlyradio.radioplayer.utils.TextCutIn
            android:id="@+id/tvPlaylistName"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:paddingHorizontal="4dp"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:fontFamily="@font/aldrich"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@string/lazy_title_half_1"
            android:textAlignment="center"
            />


        <com.onlyradio.radioplayer.utils.TextCutIn
            android:id="@+id/tvPlaylistNameBottom"
            android:layout_width="match_parent"
            android:paddingHorizontal="4dp"
            android:layout_marginBottom="4dp"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:fontFamily="@font/aldrich"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@string/lazy_title_half_2"
            android:gravity="bottom|center_horizontal"
            />

    </com.google.android.material.card.MaterialCardView>





</FrameLayout>

