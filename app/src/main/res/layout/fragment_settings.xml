            <TextView
                android:id="@+id/tvNameAutoSearchPref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="Auto search by name"
                android:textAppearance="@style/dialogItemText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvNightMode" />



            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchNameAutoSearchPref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:minHeight="48dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvNameAutoSearchPref"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvNameAutoSearchPref"
                app:thumbTint="@color/switch_thumb_color"
                app:trackTint="@color/switch_track_color" />


            <TextView
                android:id="@+id/tvForegroundPref"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="@string/foreground_pref"
                android:lineSpacingExtra="4dp"
                android:textAppearance="@style/dialogItemText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/switchForegroundPref"
                app:layout_constraintTop_toBottomOf="@+id/tvNameAutoSearchPref" />

            <TextView
                android:id="@+id/tvForegroundPrefHint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"
                android:text="(By default: keep service if audio is playing)"
                android:lineSpacingExtra="4dp"
                android:textSize="13sp"
                android:textAppearance="@style/dialogItemText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/switchForegroundPref"
                app:layout_constraintTop_toBottomOf="@+id/tvForegroundPref" />


            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchForegroundPref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:minHeight="48dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvForegroundPref"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvForegroundPref"
                app:thumbTint="@color/switch_thumb_color"
                app:trackTint="@color/switch_track_color" />

            <View
                android:id="@+id/viewBoxForStationsTitleSize"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvForegroundPrefHint"
                android:layout_marginTop="30dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="Text"
                android:textAppearance="@style/dialogItemText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/viewBoxForStationsTitleSize" />

            <TextView
                android:id="@+id/tvStationsTitleSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="34dp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Stations Title Size"
                android:textColor="@color/default_text_color"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/viewBoxForStationsTitleSize"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/tvControlBuffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="Buffer options"
                android:textAppearance="@style/dialogItemText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewBoxForStationsTitleSize" />


            <TextView
                android:id="@+id/tvControlBufferValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:textAppearance="@style/dialogItemText"
                android:textColor="@color/interactive_option_color"
                android:text="Set"
                app:drawableEndCompat="@drawable/option_open_menu"
                app:layout_constraintBottom_toBottomOf="@+id/tvControlBuffer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvControlBuffer" />









            <TextView
                android:id="@+id/tvHistorySettingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="History options"
                android:textAppearance="@style/dialogItemText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvControlBuffer" />


            <TextView
                android:id="@+id/tvHistorySettingValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:textAppearance="@style/dialogItemText"
                android:textColor="@color/interactive_option_color"
                android:text="Set"
                app:drawableEndCompat="@drawable/option_open_menu"
                app:layout_constraintBottom_toBottomOf="@+id/tvHistorySettingTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvHistorySettingTitle" />


            <TextView
                android:id="@+id/tvRecordingSettingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="Rec. quality"
                android:textAppearance="@style/dialogItemText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvHistorySettingTitle" />

            <TextView
                android:id="@+id/tvRecordingSettingsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:textAppearance="@style/dialogItemText"
                android:textColor="@color/interactive_option_color"
                app:drawableEndCompat="@drawable/option_open_menu"
                app:layout_constraintBottom_toBottomOf="@+id/tvRecordingSettingTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvRecordingSettingTitle" />


            <TextView
                android:id="@+id/tvSearchBtnTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="button"
                android:textAppearance="@style/dialogItemText"
                app:layout_constraintBottom_toBottomOf="@+id/ivButtonsSearch"
                app:layout_constraintStart_toEndOf="@+id/ivButtonsSearch"
                app:layout_constraintTop_toTopOf="@+id/ivButtonsSearch" />

            <ImageView
                android:id="@+id/ivButtonsSearch"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_new_radio_search"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRecordingSettingTitle" />

            <TextView
                android:id="@+id/tvSearchBtnReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Reset position"
                android:textAppearance="@style/dialogItemText"
                android:textColor="@color/selected_station_paused"
                app:layout_constraintBottom_toBottomOf="@+id/tvSearchBtnTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvSearchBtnTitle" />

            <TextView
                android:id="@+id/tvSearchHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:text="(Also: Swipe-Up for searches)*"
                android:textAppearance="@style/hintText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivButtonsSearch"
                />

            <TextView
                android:id="@+id/tvPlaybackSpeedRecHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="(Rec. speed is set separately in Details)*"
                android:textAppearance="@style/hintText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSearchHint" />

            <TextView
                android:id="@+id/tvPlaybackSpeedHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="(Speed up eventually brings you to stream edge)*"
                android:textAppearance="@style/hintText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPlaybackSpeedRecHint" />


            <TextView
                android:id="@+id/tvPlaybackSpeedTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="-61dp"
                android:layout_marginTop="10dp"
                android:text="speed : 100%"
                android:textAppearance="@style/dialogItemText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guidelineHorizontal"
                app:layout_constraintTop_toBottomOf="@+id/tvPlaybackSpeedHint" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabSpeedMinus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/playback_speed_minus"
                app:backgroundTint="@color/floating_buttons"
                app:fabCustomSize="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvPlaybackSpeedTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvPlaybackSpeedTitle" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabSpeedPlus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/playback_speed_plus"
                app:backgroundTint="@color/floating_buttons"
                app:fabCustomSize="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvPlaybackSpeedTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvPlaybackSpeedTitle" />


            <ImageView
                android:id="@+id/ivLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/link"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPlaybackSpeedTitle" />


            <TextView
                android:id="@+id/tvPlaybackPitchTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="-55dp"
                android:layout_marginTop="8dp"
                android:text="pitch : 100%"
                android:textAppearance="@style/dialogItemText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guidelineHorizontal"
                app:layout_constraintTop_toBottomOf="@+id/ivLink" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabPitchMinus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/playback_speed_minus"
                app:backgroundTint="@color/floating_buttons"
                app:fabCustomSize="30dp"

                app:layout_constraintBottom_toBottomOf="@+id/tvPlaybackPitchTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvPlaybackPitchTitle" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabPitchPlus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/playback_speed_plus"
                app:backgroundTint="@color/floating_buttons"
                app:fabCustomSize="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvPlaybackPitchTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvPlaybackPitchTitle" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabPrevReverb"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="36dp"
                android:src="@drawable/ic_arrow_left"
                app:backgroundTint="@color/floating_buttons"
                app:fabCustomSize="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fabPitchPlus" />

            <TextView
                android:id="@+id/tvReverbValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/dialogItemText"
                app:layout_constraintBottom_toBottomOf="@+id/fabPrevReverb"
                app:layout_constraintStart_toEndOf="@id/fabPrevReverb"
                app:layout_constraintEnd_toStartOf="@id/fabNextReverb"
                app:layout_constraintTop_toTopOf="@id/fabPrevReverb" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabNextReverb"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd ="30dp"
                android:src="@drawable/ic_arrow_right"
                app:backgroundTint="@color/floating_buttons"
                app:fabCustomSize="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/fabPrevReverb"
                app:layout_constraintEnd_toEndOf="parent"
                 />



            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabBassBoostLess"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="36dp"
                android:src="@drawable/playback_speed_minus"
                app:backgroundTint="@color/floating_buttons"
                app:fabCustomSize="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fabNextReverb" />

            <TextView
                android:id="@+id/tvBassBoostValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-65dp"
                android:text="Virtualizer : 0"
                android:textAppearance="@style/dialogItemText"
                app:layout_constraintBottom_toBottomOf="@+id/fabBassBoostLess"
                app:layout_constraintStart_toEndOf="@id/guidelineHorizontal"
                app:layout_constraintTop_toTopOf="@id/fabBassBoostLess" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabBassBoostMore"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd ="30dp"
                android:src="@drawable/playback_speed_plus"
                app:backgroundTint="@color/floating_buttons"
                app:fabCustomSize="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/fabBassBoostLess"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fabBassBoostMore"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>