<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvSettingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="@style/mainTextTitle"
        android:text="Options"/>


    <TextView
        android:id="@+id/tvNightMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:text="Dark mode"
        android:textAppearance="@style/dialogItemText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchNightMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvNightMode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvNightMode"
        app:thumbTint="@color/switch_thumb_color"
        app:trackTint="@color/switch_track_color" />

    <TextView
        android:id="@+id/tvNightModePref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Dark mode on start"
        android:textAppearance="@style/dialogItemText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNightMode" />


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchNightModePref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvNightModePref"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvNightModePref"
        app:thumbTint="@color/switch_thumb_color"
        app:trackTint="@color/switch_track_color" />

    <TextView
        android:id="@+id/tvHistorySettingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="History option"
        android:textAppearance="@style/dialogItemText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNightModePref" />


    <TextView
        android:id="@+id/tvHistorySettingValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/dialogItemText"
        android:textColor="@color/interactive_option_color"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvHistorySettingTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvHistorySettingTitle"
        app:drawableEndCompat="@drawable/option_open_menu" />


    <TextView
        android:id="@+id/tvRecordingSettingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Rec. quality"
        android:textAppearance="@style/dialogItemText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHistorySettingTitle" />

    <TextView
        android:id="@+id/tvRecordingSettingsValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/dialogItemText"
        android:textColor="@color/interactive_option_color"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvRecordingSettingTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvRecordingSettingTitle"
        app:drawableEndCompat="@drawable/option_open_menu" />


    <TextView
        android:id="@+id/tvSearchBtnTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="button"
        android:textAppearance="@style/dialogItemText"
        app:layout_constraintBottom_toBottomOf="@+id/ivButtonsSearch"
        app:layout_constraintStart_toEndOf="@+id/ivButtonsSearch"
        app:layout_constraintTop_toTopOf="@+id/ivButtonsSearch" />

    <ImageView
        android:id="@+id/ivButtonsSearch"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_new_radio_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRecordingSettingTitle" />

    <TextView
        android:id="@+id/tvSearchBtnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/dialogItemText"
        android:layout_marginEnd="10dp"
        android:textColor="@color/selected_station_paused"
        android:text="Reset position"
        app:layout_constraintBottom_toBottomOf="@+id/tvSearchBtnTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvSearchBtnTitle"
        />

    <TextView
        android:id="@+id/tvSearchHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="(Also: Swipe-Up for searches)*"
        android:fontFamily="@font/aldrich"
        android:textSize="13sp"
        android:textColor="@color/Separator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivButtonsSearch"
         />

    <TextView
        android:id="@+id/tvPlaybackSpeedHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/aldrich"
        android:text="(Rec. speed is set separately in Details)*"
        android:textColor="@color/Separator"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/tvPlaybackSpeedTitle"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tvPlaybackSpeedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Radio play speed"
        android:textAppearance="@style/mainTextTitle"
        app:layout_constraintBottom_toTopOf="@+id/tvPlaybackSpeedValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/tvPlaybackSpeedValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-23dp"
        android:text="100%"
        android:textAppearance="@style/dialogItemText"
        app:layout_constraintBottom_toBottomOf="@+id/fabSpeedMinus"
        app:layout_constraintStart_toStartOf="@+id/guidelineHorizontal"
        app:layout_constraintTop_toTopOf="@+id/fabSpeedMinus" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSpeedMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/playback_speed_minus"
        app:backgroundTint="@color/floating_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSpeedPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/playback_speed_plus"
        app:backgroundTint="@color/floating_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>