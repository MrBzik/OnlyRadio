<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    >


    <ImageView
        android:id="@+id/ivCurrentStationImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_radio_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvStationTitle"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:paddingHorizontal="8dp"
        android:paddingTop="8dp"
        android:text="Station name"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivTogglePlayCurrentStation"
        app:layout_constraintStart_toEndOf="@+id/ivCurrentStationImage" />

    <TextView
        android:id="@+id/tvExpandHideText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:text="@string/Expand"
        android:textColor="@color/interactive_text_color"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvStationTitle"
        app:layout_constraintEnd_toEndOf="@+id/tvStationTitle" />

    <ImageView
        android:id="@+id/ivTogglePlayCurrentStation"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_play_pause"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/gradient_for_separators"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>