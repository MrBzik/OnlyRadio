<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/radioItemRootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/main_background"
    android:paddingStart="8dp"
    >


    <com.google.android.material.card.MaterialCardView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/item_cardview_corners"
        >
        <ImageView
            android:id="@+id/ivItemImage"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:alpha="0.7"
            />

        <TextView
            android:id="@+id/tvPlaceholder"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:fontFamily="@font/ranchers"
            android:gravity="center"
            android:text="D"
            android:textColor="@color/main_background"
            android:textSize="40sp" />

    </com.google.android.material.card.MaterialCardView>






    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="73dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:id="@+id/tvPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="@color/default_text_color"
            android:text="Some station name"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center|start"
            android:maxLines="2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:fontFamily="@font/aldrich"
            android:textColor="@color/default_secondary_text_color"
            android:maxLines="1"
            android:textSize="14sp"
            />

    </LinearLayout>

